<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <!-- rectangle表示为矩形 -->

    <!-- 填充的颜色 -->
    <solid android:color="@color/theme_bg_white" />

    <!-- 边框的粗细和颜色 -->
    <stroke
            android:width="0dp"
            android:color="#fff"/>
    <!-- android:radius 圆角的半径 -->
    <corners
            android:radius="10dp"/>
</shape>